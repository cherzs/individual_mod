<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Member Form View -->
    <record id="view_member_form" model="ir.ui.view">
        <field name="name">custom.library.member.form</field>
        <field name="model">custom.library.member</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Member Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="many2one_avatar"/>
                            <field name="member_number"/>
                            <field name="membership_date"/>
                            <field name="expiry_date"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="membership_type"/>
                            <field name="max_loan_limit"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="loan_count" readonly="1"/>
                            <field name="overdue_count" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Add notes about this member..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Member Tree View -->
    <record id="view_member_tree" model="ir.ui.view">
        <field name="name">custom.library.member.tree</field>
        <field name="model">custom.library.member</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="member_number"/>
                <field name="membership_date"/>
                <field name="expiry_date"/>
                <field name="membership_type"/>
                <field name="loan_count"/>
                <field name="overdue_count"/>
                <field name="phone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
    
    <!-- Member Search View -->
    <record id="view_member_search" model="ir.ui.view">
        <field name="name">custom.library.member.search</field>
        <field name="model">custom.library.member</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="member_number"/>
                <field name="email"/>
                <field name="phone"/>
                <separator/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_membership_type" string="Membership Type" context="{'group_by': 'membership_type'}"/>
                    <filter name="group_by_membership_date" string="Membership Date" context="{'group_by': 'membership_date'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Member Action -->
    <record id="action_members" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">custom.library.member</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first member
            </p>
            <p>
                Add information about the library member.
            </p>
        </field>
    </record>
</odoo>