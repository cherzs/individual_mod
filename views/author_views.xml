<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Author Form View -->
    <record id="view_author_form" model="ir.ui.view">
        <field name="name">custom.author.form</field>
        <field name="model">custom.author</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_title">
                        
                        <h1>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <field name="name" placeholder="Author Name"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_books" type="object" class="oe_stat_button" icon="fa-book">
                            <field name="book_count" widget="statinfo" string="Books"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="birth_date"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Biography">
                            <field name="biography" placeholder="Author biography..."/>
                        </page>
                        <page string="Books">
                            <field name="book_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="isbn"/>
                                    <field name="publisher"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Author Tree View -->
    <record id="view_author_tree" model="ir.ui.view">
        <field name="name">custom.author.tree</field>
        <field name="model">custom.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="birth_date"/>
                <field name="book_count"/>
            </tree>
        </field>
    </record>

    <!-- Author Search View -->
    <record id="view_author_search" model="ir.ui.view">
        <field name="name">custom.author.search</field>
        <field name="model">custom.author</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_authors" model="ir.actions.act_window">
        <field name="name">Authors</field>
        <field name="res_model">custom.author</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first author
            </p>
            <p>
                Add information about the author.
            </p>
        </field>
    </record>
</odoo>