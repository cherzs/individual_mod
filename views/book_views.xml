<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_book_form" model="ir.ui.view">
            <field name="name">custom.book.form</field>
            <field name="model">custom.book</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_marks_as_borrowed" string="Mark as Borrowed"
                                type="object" class="btn-primary" invisible="state != 'available'"/>
                        <button name="action_mark_as_available" string="Mark as Available"
                                type="object" class="btn-primary" invisible="state != 'borrowed'"/>
                        <button name="action_mark_as_lost" string="Mark as Lost"
                                type="object" class="btn-danger" invisible="state != 'available'"/>
                        <field name="state" widget="statusbar" statusbar_visible="available, borrowed, lost"/>
                    </header>
                    <sheet>
                       <field name="cover_image" widget="image" class="oe_avatar"/>
                       <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Book title"/>
                        </h1>
                       </div>
                       <group>
                        <group>
                            <field name="isbn"/>
                            <field name="author_id"/>
                            <field name="genre_id"/>
                            <field name="publisher"/>
                            <field name="date_published"/>                           
                        </group>
                        <group>
                            <field name="genre_ids" widget="many2many_tags"/>
                            <field name="pages"/>
                            <field name="acquisition_date"/>
                            <field name="condition"/>
                            <field name="currency_id"/>
                            <field name="price"/>
                            <field name="active"/>
                        </group>
                       </group>
                       <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Book details..."/>
                        </page>
                       </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Book Tree View -->
         <record id="view_book_tree" model="ir.ui.view">
            <field name="name">custom.book.tree</field>
            <field name="model">custom.book</field>
            <field name="arch" type="xml">
                <tree decoration-danger="state == 'lost'" decoration-warning="state=='borrowed'">
                    <field name="name"/>
                    <field name="isbn"/>
                    <field name="author_id"/>
                    <field name="publisher"/>
                    <field name="price"/>
                    <field name="state"/>
                </tree>
            </field>
         </record>

         <!-- Book Search View -->
         <record id="view_book_search" model="ir.ui.view">
            <field name="name">custom.book.search</field>
            <field name="model">custom.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="isbn"/>
                    <field name="author_id"/>
                    <field name="publisher"/>
                    <field name="genre_ids"/>
                    <separator/>
                    <filter name="available" string="Available" domain="[('state', '=', 'available')]"/>
                    <filter name="borrowed" string="Borrowed" domain="[('state', '=', 'borrowed')]"/>
                    <filter name="lost" string="Lost" domain="[('state', '=', 'lost')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_author" string="Author" context="{'group_by': 'author_id'}" />
                        <filter name="group_by_publisher" string="Publisher" context="{'group_by': 'publisher'}" />
                        <filter name="group_by_genre" string="Genre" context="{'group_by': 'genre_ids'}" />
                    </group>
                </search>
            </field>
         </record>

         <record id="view_book_genre_form" model="ir.ui.view">
            <field name="name">custom.book.genre.form</field>
            <field name="model">custom.book.genre</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
         </record>

         <record id="view_book_genre_tree" model="ir.ui.view">
            <field name="name">custom.book.genre.tree</field>
            <field name="model">custom.book.genre</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
         </record>

         <!-- Book Action -->
         <record id="action_books" model="ir.actions.act_window">
            <field name="name">Books</field>
            <field name="res_model">custom.book</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_available': 1}</field>
         </record>

         <record id="action_book_genres" model="ir.actions.act_window">
            <field name="name">Book Genres</field>
            <field name="res_model">custom.book.genre</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_smiling_face">
                    Create your first book genre to start categorizing your books.
                </p>
            </field>
            
         </record>
    </data>
</odoo>